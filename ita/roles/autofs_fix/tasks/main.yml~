---
# This playbook contains play to fix broken autofs on RHEL7

- name: Check if an autofs mounted path is there, if not restart autfs
# command: "ls /astro/local/maint/rhel7_duplexprint/pdf*"
  shell: 'ls /mn/stornext/u3 > /dev/null 2> /dev/null || if /bin/systemctl restart autofs.service;then echo -e "{{ ansible_hostname }} - $(date +%F-%H-%M)\n" >> /root/{{ ansible_hostname }}_rhel7_autofs_fix.log;fi'
  register: result
  when: ansible_lsb.major_release == "7" and ansible_lsb.id == "RedHatEnterpriseWorkstation" 


#- debug: var=result



