- name: Stop gmetad on receiver
  service: name=gmetad state=stopped
  when: ansible_hostname == "hercules"

#- name: Install Ganglia config file on receiver
#  template: src=gmond_receiver.conf.j2 dest=/etc/ganglia/gmond.conf
